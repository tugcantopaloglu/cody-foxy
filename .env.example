# Cody Foxy Environment Configuration

# Database
DATABASE_URL=postgresql+asyncpg://cody:cody@localhost:5432/codyfoxy
POSTGRES_PASSWORD=cody

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Security - CHANGE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-in-production

# AI Providers (at least one required for AI analysis)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
AI_PROVIDER=openai
AI_MODEL=gpt-4-turbo-preview

# GitHub OAuth (optional, for GitHub integration)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# GitHub App (optional, for PR scanning and status checks)
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_WEBHOOK_SECRET=

# Performance Settings
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=300
MAX_FILE_SIZE=52428800

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS
CORS_ORIGINS=http://localhost:3000,https://codyfoxy.dev

# Monitoring (optional)
SENTRY_DSN=
